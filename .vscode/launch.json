{
    "version": "0.2.0",
    "configurations": [
     {
      "name": "Strapi Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--lazy"],
      "skipFiles": [ "${workspaceFolder}/node_modules/**", "<node_internals>/**" ],
      "program": "${workspaceRoot}/node_modules/@strapi/strapi/bin/strapi.js",
      "args": [ "develop" ],
      "env": {
        "NODE_ENV": "development"
      },
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal"
     },
    ]
}